{
    "title": "Personal rules (@bolshakov)",
    "rules": [
        {
            "description": "Fix Command + Z/X/C/V on Dvorak Layout",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("z", ["left_command"], []) %>,
                    "to": <%= to([["z", ["left_command"]]]) %>,
                    "conditions": [<%= frontmost_application_unless("jetbrains") %>]
                },
                {
                    "type": "basic",
                    "from": <%= from("x", ["left_command"], []) %>,
                    "to": <%= to([["x", ["left_command"]]]) %>,
                    "conditions": [<%= frontmost_application_unless("jetbrains") %>]
                },
                {
                    "type": "basic",
                    "from": <%= from("c", ["left_command"], []) %>,
                    "to": <%= to([["c", ["left_command"]]]) %>,
                    "conditions": [<%= frontmost_application_unless("jetbrains") %>]
                },
                {
                    "type": "basic",
                    "from": <%= from("v", ["left_command"], []) %>,
                    "to": <%= to([["v", ["left_command"]]]) %>,
                    "conditions": [<%= frontmost_application_unless("jetbrains") %>]
                }
            ]
        },
        {
            "description": "Change Command + P to Command + L, Command + . to Command + w",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("p", ["command"], ["any"])%>,
                    "to": <%= to([["l", ["command"]]]) %>,
                    "conditions": [<%= frontmost_application_if(["browser"]) %>]
                },
                {
                    "type": "basic",
                    "from": <%= from("comma", ["command"], ["any"])%>,
                    "to": <%= to([["w", ["command"]]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("y", ["command"], ["any"])%>,
                    "to": <%= to([["f", ["command"]]]) %>
                }
            ]
        },
        {
            "description": "Change Command + I/J/K/L to Arrow Keys",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("i", ["left_command"], ["any"]) %>,
                    "to": <%= to([["up_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("j", ["left_command"], ["any"])%>,
                    "to": <%= to([["left_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("k", ["left_command"], ["any"])%>,
                    "to": <%= to([["down_arrow"]]) %>
                },
                    {
                    "type": "basic",
                    "from": <%= from("l", ["left_command"], ["any"])%>,
                    "to": <%= to([["right_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("u", ["left_command"], ["any"])%>,
                    "to": <%= to([["left_arrow", ["left_option"]]]) %>,
                    "conditions": [<%= frontmost_application_unless("jetbrains") %>]
                },
                {
                    "type": "basic",
                    "from": <%= from("o", ["left_command"], ["any"])%>,
                    "to": <%= to([["right_arrow", ["left_option"]]]) %>,
                    "conditions": [<%= frontmost_application_unless("jetbrains") %>]
                }
            ]
        },
        {
            "description": "Change Command + D/F to Backspace/Delete, and Command + E/R to Option + Backspace/Delete",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("d", ["right_command"], ["any"])%>,
                    "to": <%= to([["delete_or_backspace"]]) %>,
                    "conditions": [<%= frontmost_application_unless("jetbrains") %>]
                },
                {
                    "type": "basic",
                    "from": <%= from("f", ["right_command"], ["any"])%>,
                    "to": <%= to([["delete_forward"]]) %>,
                    "conditions": [<%= frontmost_application_unless("jetbrains") %>]
                },
                {
                    "type": "basic",
                    "from": <%= from("e", ["right_command"], ["any"])%>,
                    "to": <%= to([["delete_or_backspace", ["right_option"]]]) %>,
                    "conditions": [<%= frontmost_application_unless("jetbrains") %>]
                },
                {
                    "type": "basic",
                    "from": <%= from("r", ["right_command"], ["any"])%>,
                    "to": <%= to([["delete_forward", ["right_option"]]]) %>,
                    "conditions": [<%= frontmost_application_unless("jetbrains") %>]
                }
            ]
        }
    ]
}
